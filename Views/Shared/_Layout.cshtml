<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TDB Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<body>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @*<nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
                <div class="container-fluid">*@
            <a class="navbar-brand" href="#">TDB</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a>
                            @Html.ActionLink("Koti", "Index", "Home", new { area = "" }, new { @class = "nav-link" })

                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a>@Html.ActionLink("Meistä", "About", "Home", new { area = "" }, new { @class = "nav-link" })</a>
                    </li>
                    <li class="nav-item">
                        <a>@Html.ActionLink("Yhteistiedot", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</a>
                    </li>
                    @*<li class="nav-item">
                            <a class="nav-link" href="#">About</a>
                        </li>*@
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Tilaushallinta</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" @Html.ActionLink("Henkilot", "Index", "Henkilot", new { area = "" }, new { @class = "nav-link" })</a>
                            <a class="dropdown-item" @Html.ActionLink("Tuotteet", "Index", "Tuotteet", new { area = "" }, new { @class = "nav-link" })</a>
                            <a class="dropdown-item" @Html.ActionLink("Tilausten yhteenveto", "OrderSummary", "Tilaukset", new { area = "" }, new { @class = "nav-link" })</a>
                            <a class="dropdown-item" @Html.ActionLink("Tilaukset", "Index", "Tilaukset", new { area = "" }, new { @class = "nav-link" })</a>
                            <a class="dropdown-item" @Html.ActionLink("Tilausrivit", "Index", "Tilausrivit", new { area = "" }, new { @class = "nav-link" })</a>
                            <a class="dropdown-item" @Html.ActionLink("Asiakkaat", "Index", "Asiakkaat", new { area = "" }, new { @class = "nav-link" })</a>
                            <a class="dropdown-item" @Html.ActionLink("Postitoimipaikat", "Index", "Postitoimipaikat", new { area = "" }, new { @class = "nav-link" })</a>
                            @*<div class="dropdown-divider"></div>
        <a class="dropdown-item" href="#">Separated link</a>*@
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Kirjaudu</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" @Html.ActionLink("Login", "Login", "Home", new { area = "" }, new { @class = "nav-link" })</a>
                            <a class="dropdown-item" @Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })</a>

                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">(@Session["UserName"] @ViewBag.LoggedStatus )</a>
                        </div>
                    </li>
                </ul>

                <form class="d-flex">
                    <input class="form-control me-sm-2" type="search" placeholder="Search">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - TDB Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstraplux")
    @RenderSection("scripts", required: false)
</body>
</html>
